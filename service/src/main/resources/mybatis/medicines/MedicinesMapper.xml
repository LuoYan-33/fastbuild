<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.medicines.mapper.MedicinesMapper">

    <resultMap type="medicines" id="medicinesResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="manufacturers" column="manufacturers"/>
        <result property="specification" column="specification"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="warning" column="warning"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>
    <insert id="addMedicines">
        insert into medicines(id,name,manufacturers,price,specification,stock,warning,create_by,create_time,update_by,update_time,remark)
        values(uuid(),#{name},#{manufacturers},#{price},#{specification},#{stock},#{warning},#{createBy},sysdate(),#{updateBy},sysdate(),#{remark})
    </insert>
    <select id="getMedicines" resultType="com.ruoyi.project.medicines.domain.Medicines">
        select * from medicines
        <where>
            <if test="id != null and id != ''">
                id=#{id}
            </if>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

</mapper> 